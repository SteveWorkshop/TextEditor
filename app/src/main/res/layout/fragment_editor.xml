<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.EditorFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/edit_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="编辑笔记"
            app:menu="@menu/edit_menu"
            android:minHeight="?attr/actionBarSize"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/block_tag"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu_tag"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="选择标签">
                <AutoCompleteTextView
                    android:id="@+id/menu_tag_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:maxLength="20"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/panel_tools_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <include
                android:id="@+id/ui_tools"
                layout="@layout/flyout_find_bar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/panel_container"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:hint="单击开始编辑文档内容"
                        android:focusable="true"
                        android:layout_margin="0dp"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:id="@+id/txe_editor"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/panel_preview"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?attr/materialCardViewFilledStyle">
                        <LinearLayout
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/txb_prev_area"
                                    android:textSize="18sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </androidx.core.widget.NestedScrollView>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/panel_sidebar"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <io.github.materialapps.texteditor.ui.flyout.GeminiRewriteFlyout
                    android:id="@+id/flyout_ai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.floatingtoolbar.FloatingToolbarLayout
        android:id="@+id/floating_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        app:layout_behavior="com.google.android.material.behavior.HideViewOnScrollBehavior"
        android:layout_margin="16dp">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button android:id="@+id/btn_new_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_note_add_24"
                        />
                    <Button android:id="@+id/btn_open_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_folder_open_24"
                        />
                    <Button android:id="@+id/btn_save_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_save_24"
                        />
                    <Button android:id="@+id/btn_save_as"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_save_as_24"
                        />
                    <Button android:id="@+id/btn_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_format_bold_24"
                        />
                    <Button android:id="@+id/btn_italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_format_italic_24"
                        />
                    <Button android:id="@+id/btn_underline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_format_underlined_24"
                        />
                    <Button android:id="@+id/btn_ul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_list_24"
                        />
                    <Button android:id="@+id/btn_ol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_format_list_numbered_24"
                        />
                    <Button android:id="@+id/btn_h_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_horizontal_rule_24"
                        />
                    <Button android:id="@+id/btn_table"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialIconButtonStyle"
                        app:icon="@drawable/baseline_table_24"
                        />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.google.android.material.floatingtoolbar.FloatingToolbarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>